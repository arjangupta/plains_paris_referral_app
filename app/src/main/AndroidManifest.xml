<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.development.arjangupta.plainsparisreferralapp">

    <!-- Enable internet usage -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Entry activity -->
        <activity
            android:name="com.development.arjangupta.plainsparisreferralapp.MainActivity"
            android:label="Plains Paris Referral App">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Get referee information activity -->
        <activity android:name=".GetReferralInfo"></activity>
    </application>

</manifest>